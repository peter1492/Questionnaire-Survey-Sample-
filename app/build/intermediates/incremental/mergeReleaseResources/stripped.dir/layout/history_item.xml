<?xml version="1.0" encoding="utf-8"?>


                                                       
                                                   

<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_margin="8dp"
    android:padding="8dp"
    android:layout_height="wrap_content" android:tag="layout/history_item_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/heading"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:textSize="20dp"
        android:textColor="@color/black"
        tools:text="Game 1: 26 May 2020"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:textSize="18dp"
        android:layout_marginTop="4dp"
        tools:text="Game 1: 26 May 2020"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/summary"
        android:textSize="18dp"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>



</LinearLayout>

         