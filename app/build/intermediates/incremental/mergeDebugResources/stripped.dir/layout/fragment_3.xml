<?xml version="1.0" encoding="utf-8"?>


                                                  
                                                                       
                                                        

    

                 
                           
                                                                   

           

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:tag="layout/fragment_3_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools" tools:context="com.trivia.kotlin.appscriptask.ui.screens.Fragment3" xmlns:app="http://schemas.android.com/apk/res-auto">

        <TextView
            android:id="@+id/question_3_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:tag="binding_1"            
            android:textSize="22dp"
            android:gravity="center"
            android:layout_marginHorizontal="8dp"
            app:layout_constraintBottom_toTopOf="@id/answer_3_rg"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed" />

        <LinearLayout
            android:id="@+id/answer_3_rg"
            app:layout_constraintTop_toBottomOf="@id/question_3_text"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/next_3"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <CheckBox
                android:id="@+id/option_1_ques_3"
                android:tag="binding_2"           
                android:textSize="18dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <CheckBox
                android:id="@+id/option_2_ques_3"
                android:tag="binding_3"           
                android:textSize="18dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <CheckBox
                android:id="@+id/option_3_ques_3"
                android:tag="binding_4"           
                android:textSize="18dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <CheckBox
                android:id="@+id/option_4_ques_3"
                android:tag="binding_5"           
                android:textSize="18dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


        </LinearLayout>


        <Button
            android:id="@+id/next_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Next"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/answer_3_rg" />

    </androidx.constraintlayout.widget.ConstraintLayout>

         